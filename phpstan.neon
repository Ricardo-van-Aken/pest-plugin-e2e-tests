parameters:
    level: max
    paths:
        - src

    reportUnmatchedIgnoredErrors: true
    
    # Ignore Laravel helper functions - they're provided by Laravel at runtime when the package is used
    ignoreErrors:
        - '#Function config not found#'
        - '#Function request not found#'
        - '#Function response not found#'
        - '#Function route not found#'
        - '#Function csrf_token not found#'
        - '#Function storage_path not found#'
        - '#Function base_path not found#'
        - '#Function config_path not found#'